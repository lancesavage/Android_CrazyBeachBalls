<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >

	<TableLayout 
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	
    	>
		<TableRow android:gravity="center_horizontal">
		
			<Button android:id="@+id/rotateBtn"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:text="Start"
					android:layout_gravity="center_horizontal"
					android:padding="10dp"
			/>
					
			<Button android:id="@+id/alphaBtn"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:text="Start"
					android:layout_gravity="center_horizontal"
					android:padding="10dp"
			/>
		
		</TableRow>
		
		<TableRow android:gravity="center_horizontal">
			<ImageView 
			android:id="@+id/rotateIV"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@drawable/mask"
			android:padding="10dp"
			/>
			<ImageView
			android:id="@+id/alphaIV"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@drawable/mask"
			android:padding="10dp"
			/>
			
		</TableRow>
		
		<TableRow android:gravity="center_horizontal">
			<Button android:id="@+id/translateBtn"
					android:text="Start"
					android:layout_gravity="center_horizontal"			
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:padding="10dp"
			/>
			<Button android:id="@+id/scaleBtn"
					android:layout_gravity="center_horizontal"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:text="Start"
					android:padding="10dp"
			/>
		</TableRow>
		
		<TableRow android:gravity="center_horizontal"
				  android:layout_height="fill_parent"
				  android:layout_width="fill_parent"
     >
			<ImageView
			android:id="@+id/translateIV"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@drawable/mask"
			android:padding="10dp"
			/>
			<ImageView
			android:id="@+id/scaleIV"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"			
			android:src="@drawable/mask"
			android:padding="10dp"
			/>
			
		</TableRow>
	
	</TableLayout>

</LinearLayout>
